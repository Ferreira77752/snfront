programa {
    funcao inicio() {
        // Declaração de variáveis
        inteiro N, soma, i

        // Inicializa a soma
        soma = 0

        // Entrada de dados
        escreva("Digite um número N: ")
        leia(N)

        // Cálculo da soma dos primeiros N números naturais

        // Saída do resultado
        escreva("A soma dos primeiros ", N, " números naturais é: ", soma)
    }
}
